generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String?
  image         String?
  role          String    @default("USER") // USER, ADMIN, CORPORATE
  country       String?
  phonePrefix   String?
  phoneNumber   String?
  termsAccepted Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  vehicles      Vehicle[]

  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id])
}

model Organization {
  id            String    @id @default(cuid())
  name          String
  logo          String?
  type          String    @default("PARKING") // PARKING, FLEET, BLUE_ZONE, OTHER
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  users         User[]
  templates     NotificationTemplate[]
}

model Vehicle {
  id            String    @id @default(cuid())
  plate         String    @unique
  brand         String
  model         String
  type          String    @default("CAR") // CAR, MOTORCYCLE
  color         String?
  isElectric    Boolean   @default(false)
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  notifications Notification[]
}

model Notification {
  id            String             @id @default(cuid())
  type          String             // WHATSAPP, EMAIL
  status        String             @default("PENDING") // PENDING, SENT, FAILED
  content       String
  vehicleId     String
  vehicle       Vehicle            @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
}

model NotificationTemplate {
  id            String             @id @default(cuid())
  name          String
  content       String
  vehicleType   String             @default("ALL")    // ALL, CAR, MOTORCYCLE
  category      String             @default("COMMON") // COMMON, SEASONAL, URGENT
  type          String             @default("APP")    // APP, WHATSAPP, EMAIL
  isActive      Boolean            @default(true)

  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id])

  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
}

model SystemSetting {
  id                String   @id @default("default")
  systemName        String   @default("NotifyCar")
  maintenanceMode   Boolean  @default(false)
  allowRegistration Boolean  @default(true)
  gtmId             String?
  webhookUrl        String?
  
  // SMTP Settings
  smtpHost          String?
  smtpPort          Int?     @default(587)
  smtpUser          String?
  smtpPass          String?
  smtpFrom          String?  @default("noreply@notifycar.com")
  
  // Email Toggles
  emailRegistration Boolean  @default(true)
  emailRecovery     Boolean  @default(true)
  emailNotification Boolean  @default(true)
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model EmailTemplate {
  id        String   @id @default(cuid())
  slug      String   @unique // registration, recovery, notification
  subject   String
  body      String   @db.Text
  active    Boolean  @default(true)
  updatedAt DateTime @updatedAt
}

model EmergencyConfig {
  id          String   @id @default(cuid())
  country     String   @unique // Ej: "Colombia", "México", "España"
  police      String   @default("123")
  transit     String   @default("123")
  emergency   String   @default("123")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

