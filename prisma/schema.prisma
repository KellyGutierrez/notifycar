generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String?
  image         String?
  role          String    @default("USER") // USER, ADMIN
  country       String?
  phonePrefix   String?
  phoneNumber   String?
  termsAccepted Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  vehicles      Vehicle[]
}

model Vehicle {
  id            String    @id @default(cuid())
  plate         String    @unique
  brand         String
  model         String
  type          String    @default("CAR") // CAR, MOTORCYCLE
  color         String?
  isElectric    Boolean   @default(false)
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  notifications Notification[]
}

model Notification {
  id            String             @id @default(cuid())
  type          String             // WHATSAPP, EMAIL
  status        String             @default("PENDING") // PENDING, SENT, FAILED
  content       String
  vehicleId     String
  vehicle       Vehicle            @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
}

model NotificationTemplate {
  id            String             @id @default(cuid())
  name          String
  content       String
  vehicleType   String             @default("ALL")    // ALL, CAR, MOTORCYCLE
  category      String             @default("COMMON") // COMMON, SEASONAL, URGENT
  type          String             @default("APP")    // APP, WHATSAPP, EMAIL
  isActive      Boolean            @default(true)
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
}
